<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cloud_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="in.screenbiz.www.imageledger.CloudLogin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:id="@+id/textView3"
        android:text="Skip Facebook Sign IN"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="237dp"
        android:layout_height="196dp"
        app:srcCompat="@mipmap/accimage"
        android:id="@+id/imageView3"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:id="@+id/account_kit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="#FFFFFF"
        android:text="@string/mobile_login_button_text"
        android:layout_below="@id/fb_login_button"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp" />


</RelativeLayout>

